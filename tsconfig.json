{
    "version": "2.1.4",
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strictNullChecks": false,
        "outDir": "lib/",
        "declaration": true,

        "target": "ES6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": false,
        "jsx": "preserve",
        "pretty": true
    },
    "exclude": [
        "*.js",
        "*.json"
    ],
    "include": [
        "./index.ts",
        "./typings/index.d.ts",
        "./src/*.ts"
    ]
}
